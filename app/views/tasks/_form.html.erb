<%= form_for [current_user, task] do |f| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(task.errors.count, "error") %>.</h4>
        <ul>
          <% task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <%= form_group_tag(task.errors[:description]) do %>
    <%= f.label :description, id: 'task-label' %>
    <%= f.text_field :description, class: 'form-control', placeholder: 'Enter Your Task', id: 'task-desc' %>
    <% end %>
  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-custom', id: 'submit-task' %>
  </div>
<% end %>
